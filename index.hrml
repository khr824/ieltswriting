
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IELTS Academic Writing Simulator</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <style>
        :root {
            --primary: #c0392b;
            --secondary: #2c3e50;
            --light: #ecf0f1;
            --accent: #27ae60; /* Green for feedback */
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #e9ecef;
            margin: 0;
            padding: 20px;
            display: flex;
            justify-content: center;
        }

        .container {
            width: 100%;
            max-width: 1000px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            overflow: hidden;
            display: flex;
            flex-direction: column;
            min-height: 80vh;
            position: relative;
        }

        /* --- New Main Header Styles --- */
        .app-header {
            padding: 25px 20px;
            text-align: center;
            background-color: white;
            border-bottom: 1px solid #dee2e6;
        }

        .app-header h1 {
            margin: 0;
            color: var(--secondary);
            font-size: 1.8rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* --- Full Screen Overlay Styles --- */
        #start-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(44, 62, 80, 0.98);
            z-index: 9999;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
        }

        #start-overlay h1 { font-size: 2.5rem; margin-bottom: 20px; }
        
        .button-group {
            display: flex;
            gap: 20px;
            margin-top: 20px;
        }

        .fs-btn {
            background-color: var(--primary);
            color: white;
            border: 2px solid var(--primary);
            padding: 15px 30px;
            font-size: 1.1rem;
            cursor: pointer;
            border-radius: 50px;
            transition: 0.3s;
            font-weight: bold;
        }

        .fs-btn:hover { 
            background-color: white; 
            color: var(--primary); 
        }

        .fs-btn.secondary {
            background-color: transparent;
            border: 2px solid white;
            color: white;
        }

        .fs-btn.secondary:hover {
            background-color: white;
            color: var(--secondary);
            border-color: white;
        }

        /* --- Application Styles --- */
        .tabs { display: flex; background-color: var(--secondary); }

        .tab-btn {
            flex: 1;
            padding: 15px;
            border: none;
            background: none;
            color: #bdc3c7;
            font-size: 1.1rem;
            font-weight: bold;
            cursor: pointer;
            transition: 0.2s;
        }

        .tab-btn.active {
            background-color: white;
            color: var(--secondary);
            border-top: 4px solid var(--primary);
        }

        .tab-btn:hover:not(.active) {
            background-color: rgba(255,255,255,0.1);
            color: white;
        }

        .tab-content { display: none; padding: 20px; }
        .tab-content.active { display: block; }

        .controls {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            background: #f8f9fa;
            padding: 15px;
            border-radius: 6px;
            align-items: center;
            justify-content: space-between;
            border: 1px solid #dee2e6;
        }

        select {
            padding: 8px;
            border-radius: 4px;
            border: 1px solid #ced4da;
            flex-grow: 1;
            max-width: 60%;
        }

        .timer {
            font-family: 'Courier New', monospace;
            font-size: 1.8rem;
            font-weight: bold;
            color: var(--secondary);
        }

        .timer.warning {
            color: #e74c3c;
            animation: pulse 1s infinite;
        }

        @keyframes pulse { 50% { opacity: 0.5; } }

        button.action-btn {
            background-color: var(--primary);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
        }

        button.action-btn:disabled {
            background-color: #95a5a6;
            cursor: not-allowed;
        }

        button.reset-btn {
            background-color: #7f8c8d;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 0.8rem;
            margin-left: 10px;
        }

        .prompt-image-container {
            text-align: center;
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #dee2e6;
            border-radius: 4px;
            background: #fff;
            display: none;
        }

        .prompt-image-container img {
            max-width: 100%;
            max-height: 500px;
            height: auto;
        }

        textarea {
            width: 100%;
            height: 400px;
            box-sizing: border-box;
            padding: 15px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            font-family: 'Times New Roman', Times, serif;
            font-size: 1.1rem;
            line-height: 1.6;
            resize: vertical;
        }

        textarea:disabled {
            background-color: #f8f9fa;
            color: #495057;
        }

        .footer {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
            color: #6c757d;
            align-items: center;
        }

        .result-area {
            display: none;
            text-align: center;
            margin-top: 20px;
            padding: 20px;
            background: #f1f3f5;
            border-radius: 6px;
        }

        .dl-btn {
            background-color: var(--secondary);
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1rem;
            margin: 0 5px;
        }

        /* --- FEEDBACK BUTTON & MODAL --- */
        .feedback-btn {
            background-color: var(--accent);
            color: white;
            padding: 8px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 5px;
        }
        
        .feedback-btn:hover { background-color: #219150; }

        /* Modal Overlay */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(0,0,0,0.6);
            z-index: 10000;
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background: white;
            width: 90%;
            max-width: 700px;
            border-radius: 8px;
            padding: 0;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            animation: slideDown 0.3s ease-out;
            max-height: 90vh;
            overflow-y: auto;
        }

        @keyframes slideDown {
            from { transform: translateY(-50px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        .modal-header {
            background: var(--secondary);
            color: white;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }

        .modal-close {
            background: none; border: none; color: white;
            font-size: 1.5rem; cursor: pointer;
        }

        .modal-body { padding: 25px; }

        .band-score-box {
            text-align: center;
            margin-bottom: 20px;
            padding: 15px;
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 8px;
        }

        .band-score-circle {
            width: 80px; height: 80px;
            background: var(--accent);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            font-weight: bold;
            margin: 0 auto 10px auto;
        }

        .criteria-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-bottom: 20px;
        }

        .criteria-item {
            background: #fff;
            border: 1px solid #e9ecef;
            padding: 10px;
            border-radius: 4px;
            font-size: 0.9rem;
        }
        
        .criteria-title { font-weight: bold; color: var(--secondary); margin-bottom: 5px; display: block; }

        .feedback-section h4 { color: var(--primary); margin-bottom: 10px; border-bottom: 1px solid #eee; padding-bottom: 5px; }
        .feedback-list { padding-left: 20px; margin-top: 0; }
        .feedback-list li { margin-bottom: 8px; color: #555; }

    </style>
</head>
<body>

<div id="start-overlay">
    <h1>IELTS Academic Writing Simulator</h1>
    <p style="max-width: 600px; margin-bottom: 10px; font-size: 1.1rem;">
        Your progress is saved automatically. If you refresh, the timer and your text will be restored.
    </p>
    <p style="max-width: 600px; margin-bottom: 30px; font-size: 0.9rem; color: #bdc3c7;">
        Choose your display mode:
    </p>
    <div class="button-group">
        <button class="fs-btn" onclick="enterFullScreen()">Full Screen Mode</button>
        <button class="fs-btn secondary" onclick="startNormal()">Normal Mode</button>
    </div>
</div>

<div id="feedback-modal" class="modal-overlay">
    <div class="modal-content">
        <div class="modal-header">
            <h3 style="margin:0">Analysis Result</h3>
            <button class="modal-close" onclick="closeFeedback()">√ó</button>
        </div>
        <div class="modal-body" id="feedback-body">
            </div>
    </div>
</div>

<div class="container">
    <div class="app-header">
        <h1>IELTS Academic Writing Simulator</h1>
    </div>

    <div class="tabs">
        <button class="tab-btn active" onclick="openTab('task1')">Task 1 (20 Mins)</button>
        <button class="tab-btn" onclick="openTab('task2')">Task 2 (40 Mins)</button>
    </div>

    <div id="task1" class="tab-content active">
        <div class="controls">
            <select id="t1-select" onchange="handlePromptSelection('t1', this.value)">
                <option value="" disabled selected>Select Task 1 Prompt...</option>
                <option value="0">Prompt 1: Bar Chart (Forecast)</option>
                <option value="1">Prompt 2: Line Graph (Metal Prices)</option>
                <option value="2">Prompt 3: Pie Charts (Energy Capacity)</option>
                <option value="3">Prompt 4: Map (City Changes)</option>
                <option value="4">Prompt 5: Table (Smoking Habits)</option>
            </select>
            <div id="t1-timer" class="timer">20:00</div>
            <div>
                <button id="t1-btn" class="action-btn" onclick="initiateTimer('t1', 20)">Start Timer</button>
                <button class="reset-btn" onclick="resetTask('t1')">Reset</button>
            </div>
        </div>

        <div id="t1-img-container" class="prompt-image-container">
            <img id="t1-image" src="" alt="Prompt Image">
        </div>

        <textarea id="t1-text" placeholder="Select a prompt and start the timer..." disabled></textarea>
        
        <div class="footer">
            <span id="t1-status">Status: Waiting</span>
            <div>
                <button class="feedback-btn" onclick="generateFeedback('t1')">üìù Check & Score</button>
            </div>
            <span>Words: <strong id="t1-words">0</strong></span>
        </div>

        <div id="t1-result" class="result-area">
            <h3>Time is Up!</h3>
            <button class="dl-btn" onclick="takeScreenshot('t1')">üì∏ Download Screenshot</button>
            <button class="dl-btn" style="background-color: var(--accent);" onclick="generateFeedback('t1')">üìù Get Feedback</button>
        </div>
    </div>

    <div id="task2" class="tab-content">
        <div class="controls">
            <select id="t2-select" onchange="handlePromptSelection('t2', this.value)">
                <option value="" disabled selected>Select Task 2 Prompt...</option>
                <option value="Topic 1">1. Education: Free University?</option>
                <option value="Topic 2">2. Environment: Fuel Prices</option>
                <option value="Topic 3">3. Technology: Remote Work</option>
                <option value="Topic 4">4. Crime: Youth Crime</option>
                <option value="Topic 5">5. Government: Arts vs Public Services</option>
            </select>
            <div id="t2-timer" class="timer">40:00</div>
            <div>
                <button id="t2-btn" class="action-btn" onclick="initiateTimer('t2', 40)">Start Timer</button>
                <button class="reset-btn" onclick="resetTask('t2')">Reset</button>
            </div>
        </div>

        <div id="t2-prompt-display" style="padding: 15px; background:#f8f9fa; border-left:4px solid var(--primary); margin-bottom:15px; display:none; font-style:italic;"></div>

        <textarea id="t2-text" placeholder="Select a prompt and start the timer..." disabled></textarea>
        
        <div class="footer">
            <span id="t2-status">Status: Waiting</span>
            <div>
                 <button class="feedback-btn" onclick="generateFeedback('t2')">üìù Check & Score</button>
            </div>
            <span>Words: <strong id="t2-words">0</strong></span>
        </div>

        <div id="t2-result" class="result-area">
            <h3>Time is Up!</h3>
            <button class="dl-btn" onclick="takeScreenshot('t2')">üì∏ Download Screenshot</button>
            <button class="dl-btn" style="background-color: var(--accent);" onclick="generateFeedback('t2')">üìù Get Feedback</button>
        </div>
    </div>
</div>

<script>
    // --- CONFIGURATION ---
    const imageUrls = [
        "https://github.com/khr824/wp/blob/f4fbae73ee6118905ce46eb9060beada2a16a45e/image%201.png?raw=true",
        "https://github.com/khr824/wp/blob/f4fbae73ee6118905ce46eb9060beada2a16a45e/image%202.png?raw=true",
        "https://github.com/khr824/wp/blob/f4fbae73ee6118905ce46eb9060beada2a16a45e/image%203.png?raw=true",
        "https://github.com/khr824/wp/blob/f4fbae73ee6118905ce46eb9060beada2a16a45e/image%204.png?raw=true",
        "https://github.com/khr824/wp/blob/f4fbae73ee6118905ce46eb9060beada2a16a45e/image%205.png?raw=true"
    ];

    const task2Prompts = {
        "Topic 1": "Some people believe that university education should be free for everyone. Others think that students should pay for their education. Discuss both views and give your opinion.",
        "Topic 2": "The best way to solve the world's environmental problems is to increase the price of fuel. To what extent do you agree or disagree?",
        "Topic 3": "Nowadays, many people work from home using modern technology. Discuss the advantages and disadvantages of this trend.",
        "Topic 4": "In many countries, the amount of crime committed by teenagers is increasing. What do you think are the causes of this? What solutions can you suggest?",
        "Topic 5": "Government investment in the arts, such as music and theatre, is a waste of money. Governments should invest this money in public services instead. To what extent do you agree?"
    };

    let intervals = {};

    // --- INITIALIZATION ---
    window.onload = function() {
        restoreSession('t1');
        restoreSession('t2');
    };

    // --- DISPLAY MODES ---
    function startNormal() {
        document.getElementById('start-overlay').style.display = 'none';
    }

    function enterFullScreen() {
        document.getElementById('start-overlay').style.display = 'none';
        const docElm = document.documentElement;
        if (docElm.requestFullscreen) { docElm.requestFullscreen(); }
        else if (docElm.mozRequestFullScreen) { docElm.mozRequestFullScreen(); }
        else if (docElm.webkitRequestFullScreen) { docElm.webkitRequestFullScreen(); }
        else if (docElm.msRequestFullscreen) { docElm.msRequestFullscreen(); }
    }

    // --- TABS ---
    function openTab(tabId) {
        document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        
        document.getElementById(tabId).classList.add('active');
        const btnIndex = tabId === 'task1' ? 0 : 1;
        document.querySelectorAll('.tab-btn')[btnIndex].classList.add('active');
    }

    // --- SELECTION HANDLING ---
    function handlePromptSelection(taskId, value) {
        localStorage.setItem(taskId + '_selection', value);
        
        if (taskId === 't1') {
            const imgContainer = document.getElementById('t1-img-container');
            const imgTag = document.getElementById('t1-image');
            imgTag.src = imageUrls[value];
            imgContainer.style.display = 'block';
        } else {
            const display = document.getElementById('t2-prompt-display');
            display.textContent = task2Prompts[value];
            display.style.display = 'block';
        }
    }

    // --- TIMER LOGIC ---
    function initiateTimer(taskId, minutes) {
        const select = document.getElementById(taskId + '-select');
        if (!select.value) {
            alert('Please select a topic first.');
            return;
        }

        const endTime = Date.now() + (minutes * 60 * 1000);
        localStorage.setItem(taskId + '_endTime', endTime);

        lockUI(taskId);
        runTimerLoop(taskId, endTime);
    }

    function runTimerLoop(taskId, endTime) {
        const display = document.getElementById(taskId + '-timer');

        if (intervals[taskId]) clearInterval(intervals[taskId]);

        intervals[taskId] = setInterval(() => {
            const now = Date.now();
     
